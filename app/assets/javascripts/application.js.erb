$(document).ready(function () {
  $("a.fancybox").fancybox();

  $(".datepicker").datepicker({
    dateFormat : "yy-mm-dd",
    buttonImageOnly : true,
    buttonImage : "<%= asset_path('iconDatePicker.gif') %>",
    showOn : "both",
    changeMonth : true,
    changeYear : true,
    yearRange : "c-20:c+5",
    <%= "regional : '#{I18n.locale.to_s}'," if I18n.locale.to_s != 'en' %>
    altFormat : 'dd/mm/yy',
    autoSize: false,
    showButtonPanel: true,
    showOtherMonths: true,
    numberOfMonths: 3
  });

  $("#reservation_arrival").datepicker("option", "altField", '#reservation_arrival_text');
  $("#reservation_departure").datepicker("option", "altField", '#reservation_departure_text');
  $("#reservation_transfer_arrival").datepicker("option", "altField", '#reservation_transfer_arrival_text');

  /*
  Textile footnote generated html

  <sup id="fnr1" class="footnote"><a href="#fn1">1</a></sup>

  <p id="fn1" class="footnote"><a href="#fnr1"><sup>1</sup></a> Down here, in fact.<br>
  fn2. Down here, in fact2.</p>
  */

  $('sup.footnote a').map(function() {
    footnote_id = $(this).attr('href');
    $(footnote_id + ' a').remove();
    $(this).qtip({
      content: {
        text: $(footnote_id).text()
      },
      style: {
        classes: 'ui-tooltip-tipped',
      }
    });
  });

  $('.fancy-modal').each(function () {
    $($(this).attr('rel')).hide();
  });
});

jQuery.fn.reset = function () {
  $(this).find(':input').each(function() {
    switch(this.type) {
      case 'password':
      case 'select-multiple':
      case 'select-one':
      case 'text':
      case 'textarea':
        $(this).val('');
        break;
      case 'checkbox':
      case 'radio':
        this.checked = false;
    }
  });
}

$('#reservation_wants_transfer_sim').live('click', function() {
  $('#transfer_details').show();
});

$('#reservation_wants_transfer_no').live('click', function() {
  $('#transfer_details').hide();
});

$('#contact_details_toggle a').live('click', function() {
  $('#contact_details').show();
  $('#contact_details_toggle').hide();
});

$("a.fancy-modal").live('click', function () {
  $.fancybox($($(this).attr('rel')).html(), {padding: 20, width: 600, height: 400, autoScale: false, autoDimensions: false});
});

$('sup.footnote a').live('click', function(event) {
  event.preventDefault();
});

$('.toggle-list').live('click', function () {
  $(this).next('ul').fadeToggle();
});