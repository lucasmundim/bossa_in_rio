<fieldset>
  <legend>Foto</legend>

  <div class="clearfix image-field">
    <%= f.label :image, "Arquivo" %>
    <div class="input">
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>

    <%= link_to @photo.image.url, :class => "fancybox" do %>
      <%= image_tag @photo.image.thumb.url %>
    <% end if @photo.image? %>
  </div>

  <div class="clearfix image-field">
    <%= f.label :tags_data, "Tags" %>
    <div class="input">
      <%= f.text_area :tags_data, :class => 'span9', :rows => 6 %>
      <span class="help-block"><strong>Nota:</strong> coloque uma tag por linha</span>
    </div>
  </div>

  <ul class="tabs" data-tabs="tabs">
    <% I18n.available_locales.each_with_index do |locale, index| %>
      <li class="<%= "active" if index == 0 %>"><a href="#<%= locale %>"><%= locale %></a></li>
    <% end %>
  </ul>

  <div class="tab-content">
    <% I18n.available_locales.each_with_index do |locale, index| %>
      <% I18n.with_locale(locale) do %>
        <div id="<%= locale %>" class="tab-pane <%= "active" if index == 0 %>">
          <div class="clearfix">
            <%= label_tag "translations[#{locale}][caption]", "Legenda" %>
            <div class="input">
              <%= text_field_tag "translations[#{locale}][caption]", @photo.translation_for(locale).caption, :class => "span9" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn primary" %>

    <%= link_to "Cancelar", admin_photos_path %>
  </div>
</fieldset>
