<% if @imageable.photos.present? %>
  <h3>Fotos</h3>

  <table class="zebra-striped sortable">
    <thead>
      <tr>
        <th></th>
        <th>Legenda</th>
        <th>Foto</th>
        <th></th>
      </tr>
    </thead>

    <tbody data-update-url="<%= imageable_reorder_photos_path(@imageable) %>">
    <% @imageable.photos.ordered.each do |photo| %>
      <tr id="<%= dom_id(photo) %>">
        <td class="photo-move"><a class="btn move">mover</a></td>
        <td class="photo-caption"><%= link_to photo.caption.presence || "[sem legenda]", edit_imageable_photo_path(@imageable, photo) %></td>
        <td class="photo-image">
          <%= link_to photo.image.url, :class => "fancybox" do %>
            <%= image_tag photo.image.thumb.url %>
          <% end if photo.image? %>
        </td>
        <td class="photo-delete"><%= link_to "remover", imageable_photo_path(@imageable, photo), :method => :delete, :confirm => "VocÃª tem certeza?" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% end %>

<%= link_to "Adicionar Foto", new_imageable_photo_path(@imageable), :class => "btn primary" %>