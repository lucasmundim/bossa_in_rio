<%= form_for(@snippet, :url => admin_page_snippet_path(@page, @snippet)) do |f| %>
  <% I18n.available_locales.each do |locale| %>
    <% I18n.with_locale(locale) do %>
      <div class="field">
        <%= label_tag "translations[#{locale}][body]", "Body [#{locale.to_s}]" %><br />
        <%= text_area_tag "translations[#{locale}][body]", @snippet.translation_for(locale).body %>
      </div>
    <% end %>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
